<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Encrypted Transactions"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="40dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Uplus keeps your transactions\n private and secure \nwith cutting-edge security "
        android:paddingTop="10dp"
        android:textColor="#eaeaea"
        android:textSize="16sp"
        android:gravity="center"/>
    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_gravity="center"
        android:background="@drawable/lock"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="Get Started"
        android:textAllCaps="false"
        android:shadowRadius="@integer/google_play_services_version"
        android:background="#17c79e"
        android:textColor="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

</LinearLayout>