<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f9f2ea"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.uplus.fragments.OneFragment">
    <RelativeLayout
        android:id="@+id/layoutHomeGuide"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/goudeCont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click on + button below to create your contribution group"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <com.baoyz.widget.PullRefreshLayout
        android:id="@+id/pullHomeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:clickable="true"/>
    </com.baoyz.widget.PullRefreshLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="top|left"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="@dimen/fab_margin_right"
        android:clickable="true"
        android:elevation="4dp"
        app:srcCompat="@mipmap/addgroup1"
        app:elevation="4dp"
        app:fabSize="normal"
        app:layout_anchorGravity="bottom|right"
        app:pressedTranslationZ="12dp"
        app:backgroundTint="#18b985"
        app:rippleColor="#00584C"/>
</RelativeLayout>
