<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.uplus.fragments.FiveFragment"
    android:background="#f4ece2">

    <ImageView
        android:id="@+id/churchBg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/church"/>
    <RelativeLayout
        android:id="@+id/eventInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/churchBg">

        <android.support.v7.widget.CardView
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_overlay">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#eff1f0"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true">
                <TextView
                    android:id="@+id/eventName"
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Name: "/>
                <TextView
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:id="@+id/eventLocation"
                    android:layout_below="@+id/eventName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Location:"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
    <TabHost
        android:id="@+id/tabChurch"
        android:layout_below="@+id/eventInfo"
        android:layout_width="match_parent"
        android:layout_height="300dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/Tickets"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:elevation="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black_overlay">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#eff1f0"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true">
                            <TextView
                                android:id="@+id/txtUserMobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:padding="15dp"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:text="VIP:"/>

                            <Button
                                android:id="@+id/payOff1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:text="Book"
                                android:textColor="#fff"
                                android:textSize="16sp"
                                android:theme="@style/AppTheme.Gray"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5,000 Rwf"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:padding="15dp"
                                android:layout_toLeftOf="@id/payOff1"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:elevation="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black_overlay">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#eff1f0"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true">
                            <TextView
                                android:id="@+id/ticket2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:padding="15dp"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:text="Other:"/>
                            <Button
                                android:id="@+id/payOff2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:text="Book"
                                android:textColor="#fff"
                                android:textSize="16sp"
                                android:theme="@style/AppTheme.Gray"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2,000 Rwf"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:padding="15dp"
                                android:layout_toLeftOf="@id/payOff2"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Mytickets"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <android.support.v7.widget.CardView
                        android:elevation="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black_overlay">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="200dp"
                            android:orientation="horizontal"
                            android:background="#eff1f0"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true">


                            <com.google.android.gms.maps.MapView
                                android:id="@+id/mapView"
                                android:layout_width="match_parent"
                                android:layout_height="100dp" />
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</RelativeLayout>
